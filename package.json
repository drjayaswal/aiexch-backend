{
  "name": "aiexch-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "start:dev": "bun run src/index.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:migrate:prod": "bun run dist/db/migrate.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.888.0",
    "@aws-sdk/s3-request-presigner": "^3.888.0",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/node": "^1.4.0",
    "@getbrevo/brevo": "^3.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/nodemailer": "^7.0.3",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "elysia": "^1.4.5",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "redis": "^4.7.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "^1.3.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.15",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
